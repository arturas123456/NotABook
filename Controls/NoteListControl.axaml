<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:NotABook"
			 xmlns:controls="using:NotABook"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="300"
             x:Class="NotABook.NoteListControl">
		<ListBox Background="{ DynamicResource Background800 }" Name="NotePanel" SelectionMode="Single,Toggle" SelectionChanged="ListBox_SelectionChanged">
			<ListBox.Styles>
				<Style Selector="ListBoxItem:selected /template/ ContentPresenter">
					<Setter Property="Background" Value="Khaki"/>
				</Style>
			</ListBox.Styles>
	</ListBox>
</UserControl>

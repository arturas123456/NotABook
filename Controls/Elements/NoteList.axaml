<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:NotABook"
			 xmlns:controls="using:NotABook"
             mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="540"
             x:Class="NotABook.NoteList">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		
		<StackPanel Orientation="Vertical" Grid.Row="0" Background="{ DynamicResource LightBackground900 }" Name="NotePanel" />
		
		<Button	Grid.Row="1" x:Name="DeleteButton" Background="{DynamicResource LightPrimary600}" Content="Delete" Width="100" Margin="20 10" VerticalAlignment="Bottom" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
	</Grid>
</UserControl>

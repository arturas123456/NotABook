<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:NotABook">
	<Design.PreviewWith>
		<controls:NoteListItemControl />
	</Design.PreviewWith>

	<Style Selector="controls|NoteListItemControl">

		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<ListBoxItem x:Name="NoteItem" Tag="{ TemplateBinding NoteID }" Background="{ DynamicResource Background900 }" Padding="10">
					<StackPanel Orientation="Horizontal">
						<Label Content="{ TemplateBinding NoteTitle }" HorizontalAlignment="Left" />
						<Label Content="{ TemplateBinding NoteDate }" HorizontalAlignment="Right" />
					</StackPanel>
				</ListBoxItem>
			</ControlTemplate>
		</Setter>
	</Style>

	<Style Selector="controls|NoteListItemControl.selected">

		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<ListBoxItem Tag="{ TemplateBinding NoteID }" Background="Gray" Padding="10">
					<StackPanel Orientation="Horizontal">
						<Label Content="{ TemplateBinding NoteTitle }" HorizontalAlignment="Left" Foreground="White" />
						<Label Content="{ TemplateBinding NoteDate }" HorizontalAlignment="Right" Foreground="White" />
					</StackPanel>
				</ListBoxItem>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:NotABook"
             mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="600"
             Background="{DynamicResource LightBackground950}"
             x:Class="NotABook.NotePage">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="25"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		
		<Grid Grid.Row="0" Grid.ColumnSpan="2">
				<local:Navbar/>
		</Grid>
		
		<Grid Margin="10" Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="300"/>
			</Grid.ColumnDefinitions>
		
			<Grid Grid.Column="0" Background="{DynamicResource LightBackground950}">
				<local:NoteView />
			</Grid>
		
			<Grid Grid.Column="1" Width="300">
				<local:Sidebar/>
			</Grid>
		</Grid>
	</Grid>
</UserControl>



<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:NotABook"
			 Width="927" Height="618"
			 Background="{ DynamicResource Background900 }"
             x:Class="NotABook.StartPage">
	<Grid Width="900" Height="600" VerticalAlignment="Center">
		<Grid Width="445" HorizontalAlignment="Left">
			<local:NoteListControl />
		</Grid>
		<Grid Width="445" HorizontalAlignment="Right" Name="CalendarGrid">
			<Grid.RowDefinitions>
				<RowDefinition Height="9*"/>
				<RowDefinition Height="1*"/>
			</Grid.RowDefinitions>
			<local:CalendarControl />

			<Button Grid.Row="1" Width="250" HorizontalContentAlignment="Center" Padding="10" Name="NewNoteButton" Foreground="{DynamicResource Text50}" Content="New Note" HorizontalAlignment="Center"/>
		</Grid>
	</Grid>
</UserControl>
